@page
@model Food.Pages.Users.MenuModel
@{
    Layout = "/Pages/Users/Shared/_LayoutUser.cshtml";
}

<!-- food section -->
<section class="food_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Our Menu</h2>
        </div>

        

        <ul class="filters_menu">
            <!-- 'All' Link -->
            <li class="@(Model.SelectedCategoryId == 0 ? "active" : "")" data-filter="*" data-id="0">
                <a class="category-link" asp-page-handler="ShowAllProducts">All</a>
            </li>

            <!-- Loop through categories and display them -->
            @foreach (var category in Model.Categories)
            {
                <li data-filter=".@(category.Name.ToLower().Replace(" ", ""))"
                    data-id="@category.CategoryId"
                    class="@(Model.SelectedCategoryId == category.CategoryId ? "active" : "")">
                    <a class="category-link"
                       asp-page-handler="FilterByCategory"
                       asp-route-categoryId="@category.CategoryId">@category.Name</a>
                </li>
            }
        </ul>

        <div class="filters-content">
            <div class="row grid">
                @foreach (var product in Model.Products)
                {
                    <div class="col-sm-6 col-lg-4 all @product.CategoryId">
                        <div class="box">
                            <div>
                                <div class="img-box">
                                    <!-- Sử dụng ResolveUrl để chắc chắn về đường dẫn -->
                                    <img src="@Url.Content("~/" + product.ImageUrl)" alt="@product.Name" />
                                </div>
                                <div class="detail-box">
                                    <h5>@product.Name</h5>
                                    <p>@product.Description</p>
                                    <div class="options">
                                        <h6>$@product.Price</h6>
                                        <a href="javascript:void(0)" class="btn btn-warning">
                                            <i class="fa fa-shopping-cart"></i> Add to Cart
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- end food section -->
