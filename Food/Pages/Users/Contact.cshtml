@page
@model Foodie.Pages.Users.ContactModel
@{
    Layout = "/Pages/Users/Shared/_LayoutUser.cshtml";
}

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>Send Your Query</h2>
        </div>
        <div class="alert @Model.MessageClass" style="display: @(!string.IsNullOrEmpty(Model.Message) ? "block" : "none")">
            @Model.Message
        </div>
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div class="form-group">
                        <label for="Name">Your Name</label>
                        <input type="text" class="form-control" id="Name" name="Contact.Name" value="@Model.Contact.Name" required />
                    </div>
                    <div class="form-group">
                        <label for="Email">Your Email</label>
                        <input type="email" class="form-control" id="Email" name="Contact.Email" value="@Model.Contact.Email" required />
                    </div>
                    <div class="form-group">
                        <label for="Subject">Subject</label>
                        <input type="text" class="form-control" id="Subject" name="Contact.Subject" value="@Model.Contact.Subject" required />
                    </div>
                    <div class="form-group">
                        <label for="Message">Message</label>
                        <textarea class="form-control" id="Message" name="Contact.Message" required>@Model.Contact.Message</textarea>
                    </div>
                    <button type="submit" class="btn btn-warning rounded-pill pl-4 pr-4 text-white">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
